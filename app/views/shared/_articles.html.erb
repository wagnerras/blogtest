
<% obj.each do |article| %>
    <div class="card w-75 mx-auto mb-3" >
        <div class="card-body">
            <h5><%= link_to article.title, article_path(article), class:"card-title" %> </h5>
            <p class="card-text"> <%= truncate(article.description, length: 100) %> </p>
            <div class="article-meta-details d-flex">
                <small>Created by: <%= article.user.email if article.user %>, <%= time_ago_in_words(article.created_at) %> ago, last updated: <%= time_ago_in_words(article.updated_at) %> ago</small> 
                <small class="ml-auto" style="color:#87CEFA"><%= "#{article.replies.count} #{reply?(article.replies.count)}" %></small> 
            </div>
            <% if current_user == article.user %>
                <%= link_to 'Edit', edit_article_path(article), class:"btn btn-primary btn-sm" %>
                <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} , class:"btn btn-danger btn-sm" %>
            <% end %>
        </div>
    </div>
<% end %>


